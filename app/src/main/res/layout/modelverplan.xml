<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRandom"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:srcCompat="@drawable/chica"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="86dp" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web|email"
                android:capitalize="words"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="TextView"
                android:textAllCaps="false"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvInformacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/burbuja2"
                android:paddingStart="10dp"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp"
                android:text="TextView"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="212dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Opciones"
                android:textAlignment="center" />

            <Button
                android:id="@+id/botonApuntarse"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/primaryLightColor"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/meapunto"
                android:textColor="@color/quantum_amber500" />

            <Button
                android:id="@+id/botonChat"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="40dp"
                android:background="@color/primaryLightColor"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/chat"
                android:textColor="@color/quantum_amber500" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Â¿Arrepentido?"
                android:textAlignment="center" />

            <Button
                android:id="@+id/botonDejar"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/primaryLightColor"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/dejardeparticipar"
                android:textColor="@color/quantum_amber500"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="473dp" />

            <Button
                android:id="@+id/botonEliminar"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_margin="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/quantum_error_dark"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Borrar" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>