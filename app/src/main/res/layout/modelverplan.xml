<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerPlan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRandom"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                app:srcCompat="@drawable/chica"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="86dp" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvInformacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="212dp" />

            <TextView
                android:id="@+id/tvUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="TextView" />

            <Button
                android:id="@+id/botonApuntarse"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/primaryLightColor"
                android:text="@string/meapunto"
                android:textColor="@color/quantum_amber500" />

            <Button
                android:id="@+id/botonChat"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:background="@color/primaryLightColor"
                android:text="@string/chat"
                android:textColor="@color/quantum_amber500" />

            <Button
                android:id="@+id/botonDejar"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                android:background="@color/quantum_deeppurple100"
                android:text="@string/dejardeparticipar"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="473dp" />

            <Button
                android:id="@+id/botonEliminar"
                android:layout_width="157dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/quantum_error_light"
                android:text="Borrar" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>